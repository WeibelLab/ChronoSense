{
  "name": "petridish",
  "version": "1.0.0",
  "description": "Jekyll theme for research project websites.",
  "author": "Peter Desmet",
  "license": "MIT",
  "homepage": "https://github.com/peterdesmet/petridish",
  "keywords": [
    "jekyll",
    "theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/peterdesmet/petridish.git"
  },
  "bugs": {
    "url": "https://github.com/peterdesmet/petridish/issues"
  },
  "scripts": {
    "copy:bootstrap-scss": "cp -r node_modules/bootstrap/scss/* _sass/bootstrap",
    "copy:font-awesome": "cp node_modules/font-awesome/css/font-awesome.min.css assets/theme/css/font-awesome.min.css && cp -r node_modules/font-awesome/fonts/* assets/theme/fonts",
    "copy:jquery": "cp node_modules/jquery/dist/jquery.min.js assets/theme/js/jquery.min.js",
    "copy:anchor-js": "cp node_modules/anchor-js/anchor.min.js assets/theme/js/anchor.min.js",
    "copy:popper": "cp node_modules/popper.js/dist/umd/popper.min.js assets/theme/js/popper.min.js",
    "copy:bootstrap": "cp node_modules/bootstrap/dist/js/bootstrap.min.js assets/theme/js/bootstrap.min.js",
    "copy:all": "mkdir -p _sass/bootstrap && mkdir -p assets/theme/css && mkdir -p assets/theme/fonts && mkdir -p assets/theme/js && npm run copy:bootstrap-scss && npm run copy:font-awesome && npm run copy:jquery && npm run copy:anchor-js && npm run copy:popper && npm run copy:bootstrap"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "font-awesome": "^4.7.0",
    "jquery": "^3.5.0",
    "popper.js": "^1.14.7",
    "anchor-js": "^4.2.0"
  }
}
